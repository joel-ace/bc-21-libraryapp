<%- include partials/header.ejs %>
  <div class="container">
    <div class="row">
        <div class="p20">
            <div class="col-md-9">
                <h1>Edit Book</h1>
                <hr />
                <div id="alertWrap"></div>
                <form id="edit-book" data-id="<%= book._id %>" name="login"  action="" method="post">
                    <p>Title</p>
                    <div class="form-group">
                        <input name="title" id="title" type="text" class="form-control" value="<%= book.title %>">
                    </div>
                    <p>Category</p>
                    <div class="form-group">
                        <select name="category" class="form-control" id="category">
                        <% categories.forEach(function (category){%>
                            <option <%= (category._id == book.category) ? 'selected="selected"' : "" %> 
                                value="<%= category._id %>"><%= category.title %></option>
                        <% }) %>
                        </select>
                    </div>
                    <p>Synopsis</p>
                    <div class="form-group">
                        <textarea name="synopsis" id="synopsis" row="5" class="form-control"><%= book.synopsis %></textarea>
                    </div>
                    <p>Author</p>
                    <div class="form-group">
                        <input name="author" id="author" type="text" class="form-control" value="<%= book.author %>">
                    </div>
                    <p>Availability Status</p>
                    <div class="form-group">
                        <select name="available" class="form-control" id="available">
                            <option <%= (book.available == 1) ? 'selected="selected"' : "" %> value="1">Available</option>
                            <option <%= (book.available == 0) ? 'selected="selected"' : "" %> value="0">Unavailable</option>
                        </select>
                    </div>
                    <input type="submit" class="btn btn-sm btn-primary" value="Update">
                </form>
            </div>
            <div class="col-md-3">
                <%- include partials/adminMenu.ejs %>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
  </div>
<%- include partials/footer.ejs %>
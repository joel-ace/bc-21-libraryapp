<%- include partials/header.ejs %>
  <div class="container">
    <div class="row">
        <div class="p20">
            <div class="col-sm-3 col-md-3"></div>
            <div class="col-sm-6 col-md-6">
                <h1>Register</h1>
                <hr />
                <div id="alertWrap"></div>
                <div id="fontAwesomeSpinner" class="hide" style="text-align: center;">
                    <i class="fa fa-spinner fa-pulse fa-3x fa-fw"></i>
                </div>
                <form id="register" name="login" action="" method="post">
                    <div class="form-group">
                        <p>Full Name</p>
                        <input id="name" name="name" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <p>Email</p>
                        <input id="email" name="email" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <p>Password</p>
                        <input id="password" name="password" type="password" class="form-control">
                    </div>
                    <div class="form-group">
                        <input id="admin" name="admin" type="hidden" value="user">
                        <p>Already have an Account? <a href="/login">Login Here</a> </p>
                        <input type="submit" class="btn btn-sm btn-primary" value="Login">
                    </div>
                </form>
            </div>
            <div class="col-sm-3 col-md-3"></div>
            <div class="clearfix"></div>
        </div>
    </div>
  </div>
<%- include partials/footer.ejs %>
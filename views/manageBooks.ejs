<%- include partials/header.ejs %>
  <div class="container">
    <div class="row">
        <div class="p20">
            <div class="col-md-9">
                <h1>Manage Books</h1>
                <hr />
                <div id="alertWrap"></div>
                <table class="table table-condensed" cellspacing="0" cellpadding="7" width="100%" border="0">
                    <tbody>
                        <tr>
                            <td><strong>Book Title</strong></td>
                            <td><strong>Author</strong></td>
                            <td><strong>Category</strong></td>
                            <td><strong>Availability</strong></td>
                        </tr>
                        <% books.forEach(function (bookDetails){ %>
                        <tr>
                            <td><a href="/admin/book/<%= bookDetails._id %>"> <%= bookDetails.title %><a/></td>
                            <td><%= bookDetails.author %></td>
                            <td><%= bookDetails.category %></td>
                            <td><%= bookDetails.availability %></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-3">
                <%- include partials/adminMenu.ejs %>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
  </div>
<%- include partials/footer.ejs %>
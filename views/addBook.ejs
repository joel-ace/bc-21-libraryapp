<%- include partials/header.ejs %>
  <div class="container">
    <div class="row">
        <div class="p20">
            <div class="col-md-9">
                <h1>Add a Book</h1>
                <hr />
                <div id="alertWrap"></div>
                <form id="add-book" name="login">
                    <p>Title</p>
                    <div class="form-group">
                        <input name="title" id="title" type="text" class="form-control">
                    </div>
                    <p>Category</p>
                    <div class="form-group">
                        <select name="category" class="form-control" id="category">
                        <% categories.forEach(function (category){%>
                            <option value="<%= category._id %>"><%= category.title %></option>
                        <% }) %>
                        </select>
                    </div>
                    <p>Synopsis</p>
                    <div class="form-group">
                        <textarea name="synopsis" id="synopsis" row="5" class="form-control"></textarea>
                    </div>
                    <p>Author</p>
                    <div class="form-group">
                        <input name="author" id="author" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <input name="borrow" id="borrow" type="hidden" class="form-control" value="0">
                    </div>
                    <p>Availability Status</p>
                    <div class="form-group">
                        <select name="available" class="form-control" id="available">
                            <option value="1">Available</option>
                            <option value="0">Unavailable</option>
                        </select>
                    </div>
                    <input type="submit" class="btn btn-sm btn-primary" value="Add Book">
                </form>
            </div>
            <div class="col-md-3">
                <%- include partials/adminMenu.ejs %>
            </div>
            <div class="clearfix"></div>
        </div>
    </div>
  </div>
<%- include partials/footer.ejs %>